<resources
    xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Odometer" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!-- Primary brand color. -->
        <item name="backgroundColor">@color/blue_gray_50</item>
        <item name="text_color">@color/white</item>
        <item name="button_color">@color/blue_gray_500</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
    </style>

    <style name="darkTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_gray_500</item>
        <item name="colorPrimaryVariant">@color/blue_gray_800</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textColor">@color/black</item>

        <item name="backgroundColor">@color/blue_gray_200</item>
        <item name="text_color">@color/white</item>
        <item name="button_color">@color/blue_gray_800</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor"
            tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

</resources>