<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dgioto.odometer">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />


    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_baseline_directions_run_24"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true" >

        <activity
            android:name="com.dgioto.odometer.View.EditActivity"
            android:label="@string/note"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Odometer" />

        <service
            android:name="com.dgioto.odometer.OdometerService"
            android:enabled="true"
            android:exported="false" />

        <activity
            android:name="com.dgioto.odometer.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Odometer">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>